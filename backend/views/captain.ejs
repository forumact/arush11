<div class="container-fluid">
   <div class="row">
      <div class="col-md-6 mt-3 mb-3">
         <form method="post" action="/captain/save">
            <% teamrole1.forEach(function(teams, inc){ %>
            <section class="team-bg">
               <div class="d-flex justify-content-between bg-dark">
                  <div class="p-2">
                     <%- include('functions'); %>
                        <div class="d-inline-block team-name-1">
                           <%= team1.toUpperCase() %>
                        </div>          
                  </div>
                  <div class="p-2">
                     <%- include('functions'); %>
                        <div class="d-inline-block team-name-1">Credits</div>
                        <span class="text-bold text-white">
                           <%= credits(teams)%>
                        </span>
                  </div>
               </div> 
               <div class="d-flex justify-content-center">
                  <% for (const teamswk of teams['WK'] || []) { %>
                     <%- include('partials/predictionplayer', {teams: teamswk, inc:inc, captain:captain}); %>
                        <% } %>
               </div>
               <div class="d-flex justify-content-center">
                  <% for (const teamsbat of teams['BAT']|| []) { %>
                     <%- include('partials/predictionplayer', {teams: teamsbat, inc:inc, captain:captain}); %>
                        <% } %>
               </div>
               <div class="d-flex justify-content-center">
                  <% for (const teamsar of teams['AR']|| []) { %>
                     <%- include('partials/predictionplayer', {teams: teamsar, inc:inc, captain:captain}); %>
                        <% } %>
               </div>
               <div class="d-flex justify-content-center">
                  <% for (const teamsbowl of teams['BOWL']|| []) { %>
                     <%- include('partials/predictionplayer', {teams: teamsbowl, inc:inc, captain:captain}); %>
                        <% } %>
               </div>
            </section>
            <% }); %>
            <input type="hidden" name="matchid" class="team2" value="<%= matchid %>"/>
            <input type="hidden" name="teamname" class="team2" value="<%= team1 %>"/>
            <input type="hidden" name="team1" class="team2" value="<%= team1 %>"/>
            <input type="hidden" name="team2" class="team2" value="<%= team2 %>"/>
            <div class="bg-dark p-3">
               <input type="submit" name="prediction_save" class="btn btn-warning float-end">&nbsp;
            </div>
         </form>
      </div>
