<div class="container-fluid mt-3 mb-4">
  <div class="col-lg-12 mt-4 mt-lg-0">
    <div class="row">
      <div class="col-md-12">
        <div class="container-fluid bg-dark mt-3 mb-2 text-yellow">
          <form action="/admin/players" class="row form-inline">
            <div class="form-group mb-2 mt-2 col-sm-3">
              <select class="custom-select mr-sm-2 team1" id="tournament">
                <option selected="">Tournament</option>
                <% for(var i=0; i < tournamentsList.length; i++){ %>
                  <option value="<%= tournamentsList[i].machine_name %>">
                    <%= tournamentsList[i].name.toUpperCase() %>
                  </option>
                  <% } %>
              </select>
            </div>
            <div class="form-group mb-2 mt-2 col-sm-3 tdrop" style="display: none">
              <select class="custom-select mr-sm-2 team1" name="team" id="team1">
                <option selected="">Team</option>
                <% for(var i=0; i < teamsList.length; i++){ %>
                  <option value="<%= teamsList[i].teamname %>">
                    <%= teamsList[i].teamname.toUpperCase() %>
                  </option>
                  <% } %>
              </select>
            </div>
            <div class="col-auto form-group mb-2 mt-2 col-sm-3">
              <button type="submit" class="btn btn-warning mb-2 today-match">
                Filter
              </button>
            </div>
          </form>
        </div>
        
        <div class="col-md-12 mt-3 mb-3">
          <% teamrole.forEach(function(teams, inc){ %>
            <section class="team-bg">
              <div class="d-flex justify-content-center flex-wrap">
                <% for (const teamswk of teams['WK'] || []) { %>
                  <%- include('partials/adminplayerpreview', {teams: teamswk, inc:inc}); %>
                <% } %>
              </div>
              <div class="d-flex justify-content-center flex-wrap">
                <% for (const teamsbat of teams['BAT'] || []) { %>
                  <%- include('partials/adminplayerpreview', {teams: teamsbat, inc:inc}); %>
                <% } %>
              </div>
              <div class="d-flex justify-content-center flex-wrap">
                <% for (const teamsar of teams['AR'] || []) { %>
                  <%- include('partials/adminplayerpreview', {teams: teamsar, inc:inc}); %>
                <% } %>
              </div>
              <div class="d-flex justify-content-center flex-wrap">
                <% for (const teamsbowl of teams['BOWL'] || []) { %>
                  <%- include('partials/adminplayerpreview', {teams: teamsbowl, inc:inc}); %>
                <% } %>
              </div>
            </section>
            <% }); %>
              <input type="hidden" name="team1" class="team1" value="<%= team1 %>" />
        </div>
      </div>
    </div>
  </div>
</div>