<div class="container-fluid">
  <div class="row bg-dark text-yellow mt-3 mb-3 d-flex flex-wrap justify-content-center">
    <div class="col-md-4">
      <form action="/login" method="post">
        <div class="mb-3 mt-3">
          <input type="email" class="form-control" placeholder="Email address" name="email" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text text-yellow">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <input type="password" class="form-control" placeholder="Password" name="pass">
        </div>
        <div class="mb-3 text-center">
          <button type="submit" class="btn btn-warning float-center text-dark">Login</button>
          <a href="/register" class="btn btn-warning float-center text-dark">Register</a>
        </div>
      </form>
    </div>
  </div>
</div>